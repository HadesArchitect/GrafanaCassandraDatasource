name: Run tests
on:
  pull_request:
    branches: [ main ]
  workflow_dispatch: ~
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout the repository
        uses: actions/checkout@master
      - name: yarn install
        run: make fe-deps
      - name: yarn build
        run: make fe-build
      - name: go mod tidy
        run: make be-tidy
      - name: go mod vendor
        run: make be-deps
      - name: go build linux
        run: make be-build
      - name: backend tests
        run: make be-test
      - name: frontend tests
        run: make fe-test
